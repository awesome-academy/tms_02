<h2><%= t ".Edit" %> <%= resource_name.to_s.humanize %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :phone, required: true, autofocus: true %>
        <%= f.input :address, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, hint: t(".leave_it_blank"), required: false,
          input_html: { autocomplete: t(".new-password") } %>
        <%= f.input :password_confirmation, required: false,
          input_html: { autocomplete: t(".new-password") } %>
        <%= f.input :current_password, hint: t(".we_need_your_current"), required: true,
          input_html: { autocomplete: t(".current_password") } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(".update"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3><%= t ".cancel_account" %></h3>

    <p><%= t ".unhappy" %> <%= link_to t(".cancel_my_account"), registration_path(resource_name),
      data: {confirm: t("sure")}, method: :delete %></p>

    <%= link_to t(".back"), :back %>
  </div>
</div>
