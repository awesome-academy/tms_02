<h2><%= t ".Sign_up" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :phone, required: true, autofocus: true %>
        <%= f.input :address, required: true, autofocus: true %>
        <%= f.input :password,required: true,
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: t(".new-password") } %>
        <%= f.input :password_confirmation, required: true,
          input_html: { autocomplete: t(".new-password") } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(".Sign_up"), class: "btn btn-primary", id: "sign_up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
