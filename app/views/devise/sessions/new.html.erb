<h2><%= t ".log_in" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, required: false, autofocus: true, input_html: {autocomplete: t(".email")} %>
      <%= f.input :password, required: false, input_html: {autocomplete: t(".current-password")} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <div class="form-actions" >
          <%= f.button :submit, t(".log_in"), class: "btn btn-primary", id: "log_in" %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
