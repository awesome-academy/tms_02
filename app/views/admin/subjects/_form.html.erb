<%= form_for [:admin, @subject] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <p>
    <%= f.text_field :name, placeholder: t(".name") %>
    <%= f.text_area :description, placeholder: t(".description") %>
  </p>
  <%= t "task" %>
  <%= f.fields_for :tasks do |task_builder| %>
    <%= render "task", b: task_builder %>
  <% end %>
  <p><%= f.submit t(".save"), class: "btn btn-large btn-primary" %></p>
<% end %>
